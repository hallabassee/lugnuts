<div class="container my-5">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-md-8 col-sm-12">
      <%# Title %>
      <div class="row">
        <div class="col-12">
          <h2>Orders</h2>
        </div>
      </div>
      <%# List of orders %>
      <table class="table border-bottom">
        <thead>
          <tr>
            <th>Order Number</th>
            <th>Order Date</th>            
            <th>Status</th>
            <th>Date Shipped</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.orderNumber, order %></td>
              <td><%= order.orderDate %></td>              
              <td><%= order.status %></td>
              <td><%= order.shippedDate %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-2"></div>
  </div>
</div>
