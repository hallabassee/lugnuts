<div id="contact_message"></div>
<div>
    <%= simple_form_for @contact, remote: true do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="form-inputs">
        <%= f.input :name, required: true%>
    </div>
    <div class="form-inputs">
        <%= f.input :email, required: true, placeholder: 'user@domain.com' %>
    </div>
    <div class="form-inputs">
        <%= f.input :body, required: true, placeholder: 'Leave a comment or ask a question.' %>
    </div>
    <div class="pb-3">
        <%= recaptcha_tags %>
    </div>
    <div class="form-actions">
        <%= f.button :submit, "Send", class: "btn btn-primary primary-button w-100" %>
    </div>
    <% end %>
</div>