<div id="message"></div>
<div>
    <%= simple_form_for @contact, remote: true do |f| %>
    <div class="form-inputs">
        <%= f.input :name, required: true%>
    </div>
    <div class="form-inputs">
        <%= f.input :email, required: true, placeholder: 'user@domain.com' %>
    </div>
    <div class="form-inputs">
        <%= f.input :body, required: true, placeholder: 'user@domain.com' %>
    </div>
    <div class="form-actions">
        <%= f.button :submit, "Send", class: "btn btn-primary primary-button w-100" %>
    </div>
    <% end %>
</div>