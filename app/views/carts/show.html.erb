<% if notice %>
    <aside id="notice"><%= notice %></aside>
<% end %>

<h2>Your Shopping Cart</h2>

<table>
    <% @cart.line_items.each do |line_item| %>
        <tr>
            <td><%= line_item.quantity %></td>
            <td><%= line_item.product.productName %></td>
            <td><%= number_to_currency(line_item.total_price) %> <%= link_to 'Remove', line_item, method: :delete, data: { confirm: 'Are you sure you want to remove this item?' } %></td>
        </tr>
    <% end %>
    <tfoot>
        <tr>
            <th colspan="2">Total:</th>
            <td><%= number_to_currency(@cart.total_price) %></td>
        </tr>
    </tfoot>
</table>

<%= link_to 'Continue Shopping', store_index_path %>
<%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure you want to empty the cart?' } %>


