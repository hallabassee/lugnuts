<% if notice %>
    <aside id="notice"><%= notice %></aside>
<% end %>

<h2>Your Shopping Cart</h2>

<table>
    <tr>
        <td style="vertical-align:top; padding:5px;">Quantity</td>
        <td style="vertical-align:top; padding:5px;">Product</td>
        <td style="vertical-align:top; padding:5px;">Price</td>
        <td style="vertical-align:top; padding:5px;">Action</td>
    </tr>
    <% @cart.line_items.each do |line_item| %>
        <tr>
            <td style="vertical-align:top; padding:5px;"><%= line_item.quantity %></td>
            <td style="vertical-align:top; padding:5px;"><%= line_item.product.productName %></td>
            <td style="vertical-align:top; padding:5px;"><%= number_to_currency(line_item.total_price) %></td>
            <td style="vertical-align:top; padding:5px;"><%= link_to 'Remove', line_item, method: :delete, data: { confirm: 'Are you sure you want to remove this item?' } %></td>
        </tr>
    <% end %>
    <tfoot>
        <tr>
            <th colspan="2">Total:</th>
            <td colspan="2" style="vertical-align:top; padding:5px;"><%= number_to_currency(@cart.total_price) %></td>
        </tr>
    </tfoot>
</table>

<%= link_to 'Continue Shopping', store_index_path %>
<script
    src="https://www.paypal.com/sdk/js?client-id=AZNJyozGSMKh55nOHoLSCDTip_USBQqnlU2j3cguClfbs-jht1d3IcXZuW1QCoHtBn1dTk4x3Oi8z4_w"> // Required. Replace SB_CLIENT_ID with your sandbox client ID.
</script>

<div id="paypal-button-container"></div>

<script>
  paypal.Buttons({
        createOrder: function(data, actions) {
          // This function sets up the details of the transaction, including the amount and line item details.
          return actions.order.create({
            purchase_units: [{
              amount: {
                value: <%= @cart.total_price %>
              }
            }]
          });
        },
        onApprove: function(data, actions) {
            // This function captures the funds from the transaction.
            return actions.order.capture().then(function(details) {
                // This function shows a transaction success message to your buyer.
                alert('Transaction completed by ' + details.payer.name.given_name);
            });
        }
      }).render('#paypal-button-container');
  // This function displays Smart Payment Buttons on your web page.
</script>

<%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure you want to empty the cart?' }, class: 'btn btn-primary btn-sm px-2 primary-button' %>
<%= button_to 'Checkout', new_order_path, method: :get, class: "checkout", class: 'btn btn-primary btn-sm px-2 primary-button' %>




