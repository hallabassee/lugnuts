<small><%= time_ago_in_words(comment.created_at) %> ago</small>
<% if current_user && current_user.admin %>
  <br />
  <% edit_history = comment.edit_history.nil? ? "" : "Last edited " + time_ago_in_words(comment.updated_at) + " ago" %>
  <small><%= link_to(edit_history, 'javascript:;', data: {toggle: "modal", target: "#edit_history"})%></small>
<% end %>
