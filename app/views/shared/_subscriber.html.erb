
<div id="message"></div>
	<%= simple_form_for @subscriber, remote: true do |f| %>
		<div class="form-inputs">
			<%= f.input :name, required: true%>
		</div>
		<div class="form-inputs">
			<%= f.input :email, required: true, placeholder: 'user@domain.com' %>
		</div>
			<div class="form-actions">
				<%= f.button :submit, "Sign Up", class: "btn btn-primary primary-button w-100" %>
			</div>
	<% end %>

