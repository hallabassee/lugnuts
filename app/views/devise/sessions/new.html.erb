<div class="container my-5">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <h2>Login</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :login, required: false, autofocus: true, input_html: { autocomplete: "login" } %>
          <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Login", class: "btn btn-primary primary-button" %>
        </div>
        <div><small><span id="customLink"><%= render "devise/shared/links" %></span></small></div>
      <% end %>
      <div class="col-md-2"></div>
    </div>
  </div>
</div>
